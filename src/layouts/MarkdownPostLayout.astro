---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p><em>{frontmatter.description}</em> - by {frontmatter.author} on {frontmatter.pubDate.toString().slice(0,10)}</p>
    <p>{frontmatter.tags.map((tag: string) => <span>[{tag}] </span>)}</p>
    <img src={frontmatter.image.url} alt={frontmatter.image.title} style="width: 100%; height: auto;"/>
    <slot />
</BaseLayout>